{
  "tools": [
    {
      "type": "function",
      "name": "confirm_dialog",
      "description": "向用户展示确认对话框，支持选项选择或自由文本输入。当你需要用户做出选择或确认操作时调用此工具。工具会阻塞等待用户提交回复。",
      "parameters": {
        "type": "object",
        "properties": {
          "question": {
            "type": "string",
            "description": "向用户展示的问题或提示文本"
          },
          "options": {
            "type": "array",
            "items": { "type": "string" },
            "description": "根据用户需求必须生成的选项"
          },
          "allowFreeText": {
            "type": "boolean",
            "description": "是否允许自由文本输入（默认 true）"
          }
        },
        "required": ["question"],
        "additionalProperties": false
      }
    }
  ]
}
